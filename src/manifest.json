{
    "manifest_version": 2,
    "name": "ibb-starlord",
    "description": "...",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png"
    },
    "options_page": "index.html",
    "permissions": [
        "https://slack.com/*",
        "activeTab",
        "storage",
        "contextMenus"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "web_accessible_resources": [
        "assets/css/*",
        "assets/js/*",
        "assets/fonts/*"
    ]
}
